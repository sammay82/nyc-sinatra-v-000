<h1>Update a Figure</h1>
 <form action="/figures/<%=@figure.id%>" method="post">
   <label>Figure Name:</label>
  <br></br>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br></br>
  <label>Select from exisiting Figure Titles:</label>
  <br></br>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.title_ids.include?(title.id)%>><%=title.name%></input>
  <%end%>
  <br></br>
  <label>and/or, created a new Title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>
  <label>Select from existing Landmarks:</label>
  <br></br>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%></input>
  <%end%>
  <br></br>
  <label>and/or, create a new Landmark:</label>
  <p>Name: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <p>Completion Date: <input type="text" name="landmark[year_completed]"></p>
  <br></br>
  <input type="submit" value="Edit Figure">
</form>
